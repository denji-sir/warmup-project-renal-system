# Environment Configuration Template

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_NAME="Real Estate System"
APP_URL=http://localhost:8000

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=realestate
DB_USER=root
DB_PASS=secret
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_0900_ai_ci

# Session Configuration
SESSION_NAME=RESESSID
SESSION_LIFETIME=3600
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax
SESSION_SECURE=false

# Security Settings
CSRF_SECRET=change_this_secret_key_in_production
JWT_SECRET=change_this_jwt_secret_key
BCRYPT_ROUNDS=12

# File Upload Settings
UPLOAD_MAX_MB=8
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=storage/uploads

# Export Settings
EXPORT_MAX_ROWS=20000
EXPORT_PATH=storage/exports

# Feature Flags
DEV_CART_ENABLED=true
EMAIL_VERIFICATION_ENABLED=false
REGISTRATION_ENABLED=true

# Email Configuration (for future implementation)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS=noreply@realestate.local
MAIL_FROM_NAME="Real Estate System"

# Logging
LOG_LEVEL=debug
LOG_PATH=storage/logs/app.log
ERROR_LOG_PATH=storage/logs/error.log
AUDIT_LOG_PATH=storage/logs/audit.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Search Configuration
SEARCH_RESULTS_PER_PAGE=12
SEARCH_MAX_RADIUS_KM=50
FULLTEXT_MIN_WORD_LENGTH=3

# Image Processing
IMAGE_RESIZE_ENABLED=true
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85
THUMBNAIL_WIDTH=400
THUMBNAIL_HEIGHT=300

# Cache Settings (Redis/File cache for future)
CACHE_DRIVER=file
CACHE_TTL=3600
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here

# Localization
DEFAULT_LOCALE=ru
AVAILABLE_LOCALES=ru,en
TIMEZONE=Europe/Moscow

# Performance
GZIP_ENABLED=true
ASSETS_VERSION=1.0.0
CDN_URL=null

# Development Tools
WHOOPS_ENABLED=true
QUERY_LOG_ENABLED=false
PROFILER_ENABLED=false